<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation = "http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
    <persistence-unit name="hibernate" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.yaelev.sakilagui.entity.ActorEntity</class>
        <class>com.yaelev.sakilagui.entity.AddressEntity</class>
        <class>com.yaelev.sakilagui.entity.CategoryEntity</class>
        <class>com.yaelev.sakilagui.entity.CityEntity</class>
        <class>com.yaelev.sakilagui.entity.CountryEntity</class>
        <class>com.yaelev.sakilagui.entity.CustomerEntity</class>
        <class>com.yaelev.sakilagui.entity.FilmEntity</class>
       
        <class>com.yaelev.sakilagui.entity.FilmTextEntity</class>
        <class>com.yaelev.sakilagui.entity.InventoryEntity</class>
        <class>com.yaelev.sakilagui.entity.LanguageEntity</class>
        <class>com.yaelev.sakilagui.entity.PaymentEntity</class>
        <class>com.yaelev.sakilagui.entity.RentalEntity</class>
        <class>com.yaelev.sakilagui.entity.StaffEntity</class>
        <class>com.yaelev.sakilagui.entity.StoreEntity</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/wigellsconcert?serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="Banan"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>

