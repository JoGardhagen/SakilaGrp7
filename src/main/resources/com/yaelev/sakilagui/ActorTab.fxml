<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yaelev.sakilagui.controllers.ActorTabController">
   <children>
      <TabPane prefHeight="600.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Skådespelare">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="484.0" prefWidth="800.0">
                     <children>
                        <TableView fx:id="actorTableView" editable="true" prefHeight="355.0" prefWidth="800.0">
                          <columns>
                            <TableColumn fx:id="actorIdColumn" prefWidth="75.0" text="ID" />
                            <TableColumn fx:id="actorFirstNameColumn" onEditCommit="#updateActorFirstName" prefWidth="248.0" text="Förnamn" />
                              <TableColumn fx:id="actorLastNameColumn" onEditCommit="#updateActorLastName" prefWidth="296.0" text="Efternamn" />
                              <TableColumn fx:id="actorLastUpdateColumn" prefWidth="180.0" text="Senast uppdatering" />
                          </columns>
                        </TableView>
                        <TextField fx:id="actorFirstNameConstr" layoutX="15.0" layoutY="427.0" promptText="Förnamn" />
                        <TextField fx:id="actorLastNameConstr" layoutX="15.0" layoutY="467.0" promptText="Efternamn" />
                        <Button layoutX="15.0" layoutY="506.0" mnemonicParsing="false" onMouseClicked="#createActor" text="Lägg till skådespelare" />
                        <Button layoutX="635.0" layoutY="506.0" mnemonicParsing="false" onMouseClicked="#deleteActor" text="Ta bort vald skådespelare" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab onSelectionChanged="#updateActorFilmTableView" text="Filmroller">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="484.0" prefWidth="800.0">
                     <children>
                        <TableView fx:id="actorFilmTableView" prefHeight="355.0" prefWidth="800.0">
                           <columns>
                              <TableColumn fx:id="actorFilmIdColumn" prefWidth="201.0" text="Skådespelare ID" />
                              <TableColumn fx:id="filmActorIdColumn" prefWidth="302.0" text="Film ID" />
                              <TableColumn fx:id="actorFilmLastUpdateColumn" prefWidth="296.0" text="Senast uppdatering" />
                           </columns>
                        </TableView>
                        <Button layoutX="36.0" layoutY="506.0" mnemonicParsing="false" text="Lägg till koppling" />
                        <Button layoutX="681.0" layoutY="506.0" mnemonicParsing="false" text="Ta bort koppling" />
                        <ChoiceBox layoutX="14.0" layoutY="422.0" prefWidth="150.0" />
                        <ChoiceBox layoutX="15.0" layoutY="476.0" prefWidth="150.0" />
                        <Label layoutX="43.0" layoutY="405.0" text="Välj skådespelare" />
                        <Label layoutX="68.0" layoutY="459.0" text="Välj film" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
